<script type="text/javascript">
function redirect (page) {
	window.location='{{url}}'+"?page="+page;
}
</script>
<div style="display: block;margin: 0 auto;width: 100%;padding: 5px;" align="center">
<h1 class="display-1" >{{pagetype}}</h1>
<nav aria-label="...">
  <ul class="pagination pagination-lg">
    {{# times pagesize}}
    <li class="page-item"><a id="link" class="page-link" onclick="redirect({{this}})">{{this}}</a></li>
    {{/times}}
  </ul>
</nav>
</div>
<scroll-container>
	{{# each events}}
	<div class="row">
		{{# each this}}
  		<div class="col-sm-6 col-md-4">
    		<div class="thumbnail">
      			<img src="{{this.logo.original.url}}" alt="..." class="img-responsive">
      			<div class="caption">
        			<h3>{{this.name.text}}</h3>
        			<p class="description">starts at {{this.start.local}}</p>
      				{{# if this.is_free}}
      					<p class="description">FREE</p>
      				{{else}}
      					<p class="description">PAID</p>
      				{{/if}}
        			<div class="clearfix">
        				<div class="price pull-left">capacity {{this.capacity}}</div>
        				<a href="{{this.url}}" class="btn btn-default pull-right btn-success" role="button">Vist</a>
        			</div>
      			</div>
    		</div>
  		</div>
  		{{/each}}
	</div>
	{{/each}}
</scroll-container>